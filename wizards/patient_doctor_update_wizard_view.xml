<odoo>
  <record id="view_patient_doctor_update_wizard_form" model="ir.ui.view">
    <field name="name">patient.doctor.update.wizard.form</field>
    <field name="model">hr.hospital.patient.doctor.wizard</field>
    <field name="arch" type="xml">
      <form string="Update Personal Doctor">
        <group>
          <field name="doctor_id"/>
          <field name="patient_ids" widget="many2many_tags"/>
        </group>
        <footer>
          <button string="Update" type="object" name="action_update_doctor" class="btn-primary"/>
          <button string="Cancel" special="cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="action_patient_doctor_update_wizard" model="ir.actions.act_window">
    <field name="name">Update Personal Doctor</field>
    <field name="res_model">hr.hospital.patient.doctor.wizard</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="view_patient_doctor_update_wizard_form"/>
    <field name="target">new</field>
    <field name="context">{}</field>
  </record>

  <record id="action_open_update_wizard_binding" model="ir.actions.act_window">
    <field name="name">Update Personal Doctor</field>
    <field name="type">ir.actions.act_window</field>
    <field name="binding_model_id" ref="hr_hospital.model_hr_hospital_patient"/>
    <field name="binding_type">action</field>
    <field name="res_model">hr.hospital.patient.doctor.wizard</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="view_patient_doctor_update_wizard_form"/>
    <field name="target">new</field>
    <field name="context">{}</field>
  </record>
</odoo>
