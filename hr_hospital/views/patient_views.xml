<odoo>
    <record id="view_patient_tree" model="ir.ui.view">
        <field name="name">hr.hospital.patient.tree</field>
        <field name="model">hr.hospital.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="first_name" />
                <field name="last_name" />
                <field name="birth_date" />
                <field name="personal_doctor_id" />
            </tree>
        </field>
    </record>

    <record id="view_patient_form" model="ir.ui.view">
        <field name="name">hr.hospital.patient.form</field>
        <field name="model">hr.hospital.patient</field>
        <field name="arch" type="xml">
            <form string="Patient">
                <header>
                    <button
                        name="action_open_visits"
                        string="Show Visits"
                        type="object"
                        class="oe_highlight"
                    />
                    <button
                        name="action_create_visit"
                        string="Create Visit"
                        type="object"
                        class="btn-primary"
                    />
                </header>
                <sheet>
                    <group>
                        <field name="first_name" />
                        <field name="last_name" />
                        <field name="name" readonly="1" />
                        <field name="birth_date" />
                        <field name="age" readonly="1" />
                        <field name="passport_data" />
                        <field name="contact_person" />
                        <field name="personal_doctor_id" />
                    </group>
                    <notebook>
                        <page string="Diagnosis History">
                            <field name="diagnosis_ids">
                                <tree>
                                    <field name="disease_id" />
                                    <field name="doctor_id" />
                                    <field name="diagnosis_date" />
                                    <field name="notes" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_patient_search" model="ir.ui.view">
        <field name="name">hr.hospital.patient.search</field>
        <field name="model">hr.hospital.patient</field>
        <field name="arch" type="xml">
            <search string="Search Patients">
                <field name="name" string="Name" />
                <field name="phone" string="Phone" />
            </search>
        </field>
    </record>

    <record id="action_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hr.hospital.patient</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="hr_hospital.view_patient_search" />
    </record>

    <menuitem
        id="menu_patient_list"
        name="All Patients"
        parent="hr_hospital_menu_patient"
        action="action_patient"
    />
</odoo>
