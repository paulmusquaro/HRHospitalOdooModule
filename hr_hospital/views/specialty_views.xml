<odoo>
    <record id="view_specialty_tree" model="ir.ui.view">
        <field name="name">hr.hospital.specialty.tree</field>
        <field name="model">hr.hospital.specialty</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="view_specialty_form" model="ir.ui.view">
        <field name="name">hr.hospital.specialty.form</field>
        <field name="model">hr.hospital.specialty</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name" />
                </group>
            </form>
        </field>
    </record>

    <record id="action_specialty" model="ir.actions.act_window">
        <field name="name">Specialties</field>
        <field name="res_model">hr.hospital.specialty</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="menu_specialty_list"
        name="All Specialties"
        parent="hr_hospital_menu_specialty"
        action="action_specialty"
    />
</odoo>
