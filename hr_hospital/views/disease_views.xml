<odoo>
    <record id="view_disease_tree" model="ir.ui.view">
        <field name="name">hr.hospital.disease.tree</field>
        <field name="model">hr.hospital.disease</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="view_disease_form" model="ir.ui.view">
        <field name="name">hr.hospital.disease.form</field>
        <field name="model">hr.hospital.disease</field>
        <field name="arch" type="xml">
            <form>
                <field name="name" />
                <field name="parent_id" />
            </form>
        </field>
    </record>

    <record id="view_disease_search" model="ir.ui.view">
        <field name="name">hr.hospital.disease.search</field>
        <field name="model">hr.hospital.disease</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />

                <searchpanel>
                    <field name="parent_id" select="multi" />
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="action_disease" model="ir.actions.act_window">
        <field name="name">Diseases</field>
        <field name="res_model">hr.hospital.disease</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_disease_search" />
    </record>

    <menuitem
        id="menu_disease_list"
        name="All Diseases"
        parent="hr_hospital_menu_disease"
        action="action_disease"
    />
</odoo>
